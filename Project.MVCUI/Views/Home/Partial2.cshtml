@model HomeVM

@foreach (Blog item in Model.Blogs)
{


<div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.Title</h4>
            <span class="doller">@item.CreatedDate.ToShortDateString()</span>
            <p>@item.Description.Substring(0,50)</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Gor>></span></a></p>
        </div>
    </div>
}