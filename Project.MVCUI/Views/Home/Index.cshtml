                                    <li><img src="@item.BlogImage" alt=""></li>

                                }
                                @*<li><img src="~/web/images/img2.jpg" alt=""></li>
        <li><img src="~/web/images/img3.jpg" alt=""></li>
        <li><img src="~/web/images/img4.jpg" alt=""></li>*@
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Tatil Seyehat Bloguna Hos Geldiniz</h3>
                    <p>Bu projeyi ogrenme amacıyla Youtubeden Murat Yucedağ hocanın eğitiminden yapılmıştır</p>
                </div>
                
                @Html.Action("Partial1" , "Home")


                <div class="grids">
                    <div class="box1">
                      @Html.Action("Partial3" ,"Home")
                       @Html.Action("Partial4" , "Home")
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
